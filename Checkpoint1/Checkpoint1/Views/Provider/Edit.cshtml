@{
    ViewData["Title"] = "Edit Provider";
}
@model BaseProject.Models.Provider

<h2>Update Provider</h2>
<form asp-controller="Provider" asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProviderID" />
    First Name:   <input asp-for="FirstName" /> <br />
    Last Name:   <input asp-for="LastName" /> <br />
    Specialty:  <input asp-for="Specialty" /> <br />
    Phone:   <input asp-for="Phone" /> <br />
    Email:  <input asp-for="Email" /> <br />
    <button type="submit">Edit</button>
</form><div>
    @Html.ActionLink("Back to List", "Index")
</div>

